. demo-vars.sh

if [ -z "$VOLTTRON_HOME" ]; then 
  echo "VOLTTRON_HOME UNSET setting to v2_home: $V2_HOME"; 
  VOLTTRON_HOME=$V2_HOME
fi

export VOLTTRON_HOME=$VOLTTRON_HOME

WHEEL=$VOLTTRON_HOME/packaged/platformagentagent-0.1-py2-none-any.whl

volttron-pkg package ../../../Agents/PlatformAgent/
volttron-pkg configure $WHEEL ./platform-config2

volttron-ctl stop --tag platformagent
volttron-ctl remove --tag platformagent
volttron-ctl install platformagent=$WHEEL
