. demo-vars.sh

if [ -z "$VOLTTRON_HOME" ]; then 
  echo "VOLTTRON_HOME UNSET setting to v1_home: $V1_HOME"; 
  VOLTTRON_HOME=$V1_HOME
fi

export VOLTTRON_HOME=$VOLTTRON_HOME

WHEEL=$VOLTTRON_HOME/packaged/platformmanageragent-0.1-py2-none-any.whl

echo "building managent wheel"
volttron-pkg package ../../../Agents/PlatformManagerAgent/
volttron-pkg configure $WHEEL ./manager-config

echo "installing wheel"
volttron-ctl stop --tag manageragent
volttron-ctl remove --tag manageragent
volttron-ctl install manageragent=$WHEEL
volttron-ctl start --tag manageragent

